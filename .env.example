# Database
# If you are using Docker, you can retrieve the values from: docker-compose.yml
DATABASE_URL=postgresql://user:password@localhost:5432/saas_starter_kit

# NextAuth.js (to be removed after Clerk migration)
NEXTAUTH_URL=http://localhost:4002
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_SESSION_STRATEGY=jwt

# Clerk Configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/join
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
CLERK_WEBHOOK_SECRET=whsec_...

# Application
APP_URL=http://localhost:4002

# SMTP (Email)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com

# OAuth Providers (for NextAuth - to be migrated to Clerk)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Svix (Webhooks)
SVIX_URL=https://api.eu.svix.com
SVIX_API_KEY=

# Jackson (SAML)
JACKSON_URL=
JACKSON_API_KEY=
JACKSON_PRODUCT_ID=boxyhq
JACKSON_EXTERNAL_URL=
JACKSON_WEBHOOK_SECRET=

# Retraced (Audit Logs)
RETRACED_URL=
RETRACED_API_KEY=
RETRACED_PROJECT_ID=

# Features
FEATURE_TEAM_SSO=true
FEATURE_TEAM_DSYNC=true
FEATURE_TEAM_WEBHOOK=true
FEATURE_TEAM_API_KEY=true
FEATURE_TEAM_AUDIT_LOG=true
FEATURE_TEAM_PAYMENTS=true
FEATURE_TEAM_DELETION=true

# Security
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
MAX_LOGIN_ATTEMPTS=5
CONFIRM_EMAIL=false
DISABLE_NON_BUSINESS_EMAIL_SIGNUP=false
SECURITY_HEADERS_ENABLED=true

# Other
GROUP_PREFIX=
HIDE_LANDING_PAGE=false
NEXT_PUBLIC_DARK_MODE=true
CLERK_LOGGING=false
NEXT_PUBLIC_MIXPANEL_TOKEN=
SLACK_WEBHOOK_URL=

# Sentry
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_TRACE_SAMPLE_RATE=0.0 # https://develop.sentry.dev/sdk/performance/#tracessamplerate
SENTRY_TRACE_SAMPLE_RATE=0.0 # https://develop.sentry.dev/sdk/performance/#tracessamplerate
